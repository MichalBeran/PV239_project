<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.muni.fi.pv239.testmeapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".TestMeApp">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.GetTestActivity"
            android:theme="@style/AppTheme.Preferences"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name=".activity.ListTestsActivity"
            android:theme="@style/AppTheme.Preferences"
            />
        <activity android:name=".activity.ShowTestActivity"
            android:theme="@style/AppTheme.Preferences"
            />
        <activity android:name=".activity.CreateQRCodeActivity"
            android:theme="@style/AppTheme.Preferences"
            />
        <activity android:name=".activity.ScanQRCodeActivity"
            android:theme="@style/AppTheme.Preferences"
            />
        <activity android:name=".activity.SettingsActivity"
            android:theme="@style/AppTheme.Preferences"
            />
        <activity android:name=".activity.RunDrillTestActivity"
            android:theme="@style/AppTheme.Preferences"
            />
        <activity android:name=".activity.RunTestActivity"
            android:theme="@style/AppTheme.Preferences"
            />
        <activity android:name=".activity.GetTestsListActivity"
            android:theme="@style/AppTheme.Preferences"
            />
    </application>

</manifest>